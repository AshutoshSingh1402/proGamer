{
  "env": {
    "node": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:node/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "node"
  ],
  "rules": {
    "no-console": "warn",
    "node/no-unsupported-features/es-syntax": "error",
    "@typescript-eslint/no-explicit-any": "off",
    "semi": ["error", "never"],
    "quotes": ["error", "single"]
  }
}
